<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="5.0" prefHeight="400.0" prefWidth="600.0" vgap="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="airplaneticketbooking.CustomerInputController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="200.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TextField fx:id="nameInput" onAction="#submit" prefHeight="35.0" prefWidth="240.0" promptText="Enter your name" GridPane.columnIndex="1">
         <font>
            <Font name="Times New Roman" size="20.0" />
         </font>
      </TextField>
      <TextField fx:id="passportIDInput" onAction="#submit" prefHeight="35.0" prefWidth="240.0" promptText="Enter your passport ID" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <font>
            <Font name="Times New Roman" size="20.0" />
         </font>
      </TextField>
      <Label text="Passenger's name : ">
         <font>
            <Font name="Times New Roman" size="20.0" />
         </font>
      </Label>
      <Label text="Passport ID : " GridPane.rowIndex="1">
         <font>
            <Font name="Times New Roman" size="20.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <children>
            <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#submit" prefHeight="35.0" prefWidth="100.0" text="Submit">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
               <HBox.margin>
                  <Insets right="40.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancelBtn" mnemonicParsing="false" onAction="#close" prefHeight="35.0" prefWidth="100.0" text="Cancel">
               <font>
                  <Font name="Times New Roman" size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
